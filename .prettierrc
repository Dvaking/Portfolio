{
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "tabWidth": 2,
  "printWidth": 100,
  "jsxSingleQuote": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "bracketSameLine": true,
  "overrides": [
    {
      "files": ["*.jsx", "*.tsx"],
      "options": {
        "jsxSingleQuote": true
      }
    }
  ]
}
